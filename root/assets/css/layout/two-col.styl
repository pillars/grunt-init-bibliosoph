.two-col {
    .document-content {
        min-width: 800px
        min-height: 100%
    }

    .document-wrap {
        background: $blue-bg
        border-left: 1px solid $blue-bg-dark
        box-shadow: #dadfe5 -1px 0 0,rgba(0,0,0,0.05) 1px 0 2px inset
        
        clearfix()
        margin-left: 50%
        min-height: 100%

        section {
            overflow: hidden
            margin-left: -100%

            section {
                float: left
                margin: 0
                width: 100%
            }
        }

        & > section + section {
            border-top: 1px solid $blue-bg-dark
        }

        .full, .left, .right {
            box-sizing: border-box
            float: left
            padding: h(2)
            width: 50%
        }
        .full {
            clear: both
            width: 100%
        }
        .left {
            clear: both
        }
        .right {
            clear: right
            float: right
            padding-top: h(4)

            &.thin-padding {
                padding-top: h(3)
            }

            &.no-padding {
                padding-top: h(2)
            }

            h3 {
                color: $blue-dark
                font-family: $f-mono
                font-size: 14px
                letter-spacing: 1px
                text-transform: uppercase

                &+pre {
                    margin: 0
                }
            }
        }
    }

    &.with-nav {
        .document-content {
            margin-left: 248px
        }
    }
}